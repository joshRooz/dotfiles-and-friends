syntax on
set cursorline
set nobackup
set autoread
set showmode
set showmatch
set autoindent smartindent
set smarttab
set scrolloff=5
filetype on
filetype indent on
filetype plugin on

" tabs and indenting
set autoindent
set smartindent
set expandtab
set tabstop=2
set shiftwidth=2

" search
set hlsearch
set showmatch

" line wrapping
set wrap linebreak nolist
set textwidth=80
set colorcolumn=80
highlight ColorColumn ctermbg=0
